	<select id="ingreResultSearchedCount" parameterType="java.util.List" resultType="java.lang.Integer">
		<![CDATA[
			select count(recipe_code) from(
			select tbl_a.recipe_code, tbl_a.recipe_name
			from standard_info tbl_a,
			     (select b.recipe_code
			     from
			        (select count(a.recipe_code) cnt, a.recipe_code
			         from
			             (select recipe_code
			              from ingre_info 
			             where ingre_name in
			]]>
				<foreach item="ingre_name" index="index" collection="list"
					open="(" separator="," close=")">
					<![CDATA[
					#{ingre_name}
					]]>
				</foreach>
				<![CDATA[
								) a
								group by a.recipe_code) b
					     where b.cnt = 2) tbl_b
					where tbl_a.recipe_code =  tbl_b.recipe_code
				)
			]]>
	</select>
	
	
	
