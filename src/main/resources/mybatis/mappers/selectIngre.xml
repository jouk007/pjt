<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="selectIngre">
	<select id="selectIngre" parameterType="java.util.List" resultType="com.javaex.vo.Std_info_Vo">
		<![CDATA[
			select distinct s.recipe_code, s.recipe_name, s.img_url, i.ingre_name
			from standard_info s, ingre_info i
			where s.recipe_code = i.recipe_code 
			and i.ingre_name in
		]]>
			<foreach item="ingre_name" index="index" collection="list"
				open="(" separator="," close=")">
				<![CDATA[
				#{ingre_name}
				]]>
			</foreach>
			
		
			
	</select>
	
	
	<select id="ingreResultSearchedCount" parameterType="java.util.List" resultType="java.lang.Integer">
		<![CDATA[
			select count(s.recipe_name)
			from standard_info s, ingre_info i
			where s.recipe_code = i.recipe_code
			and i.ingre_name in
		]]>
			<foreach item="ingre_name" index="index" collection="list"
				open="(" separator="," close=")">
				<![CDATA[
				#{ingre_name}
				]]>
			</foreach>
	</select>
	
	
	
</mapper>